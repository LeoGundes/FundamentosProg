import java.util.Scanner;

/*Questão 4: Mês do Ano
Peça ao usuário que digite um número entre 1 e 12. Retorne o nome do mês
correspondente ao número fornecido.*/

public class ExerQuatro6{
    public static void main(String[] args){
        
        Scanner digitar = new Scanner(System.in);
        
        String mes = "Insira um número de 1 a 12 e te direi o mês do ano";
        System.out.println(mes);
        
        int x;
    
        x = digitar.nextInt();
        
        switch(x){
            case 1:
                System.out.println("Janeiro");
                break;
            case 2:
                System.out.println("Fevereiro");
                break;
            case 3:
                System.out.println("Março");
                break;
            case 4:
                System.out.println("Abril");
                break;
            case 5:
                System.out.println("Maio");
                break;
            case 6:
                System.out.println("Junho");
                break;
            case 7:
                System.out.println("Julho");
                break;
            case 8:
                System.out.println("Agosto");
                break;
            case 9:
                System.out.println("Setembro");
                break;
            case 10:
                System.out.println("Outubro");
                break;
            case 11:
                System.out.println("Novembro");
                break;
            case 12:
                System.out.println("Dezembro");
                break;
            default:
                System.out.println("Inválido");
                
        }
            
        }
        
    }
