import java.util.Scanner;

/*Questão 1: Dia da Semana
Peça ao usuário para inserir um número de 1 a 7 representando um dia da semana. Exiba
o nome do dia correspondente.*/

public class ExerUm{
    public static void main(String[] args){
        
        Scanner digitar = new Scanner(System.in);
        
        String semana = "Insira um número de 1 a 7 e te direi o dia da semana";
        System.out.println(semana);
        
        int x;
    
        x = digitar.nextInt();
        
        switch(x){
            case 1:
                System.out.println("Segunda-feira");
                break;
            case 2:
                System.out.println("Terça-feira");
                break;
            case 3:
                System.out.println("Quarta-feira");
                break;
            case 4:
                System.out.println("Quinta-feira");
                break;
            case 5:
                System.out.println("Sexta-feira");
                break;
            case 6:
                System.out.println("Sábado");
                break;
            case 7:
                System.out.println("Domingo");
                break;
            default:
                System.out.println("Data inválida");
        }
            
        }
        
    }
