import java.util.Scanner;

/*Questão: Calculadora de Potência
Crie um programa que receba do usuário dois valores e calcule a potência do
primeiro elevado ao segundo valor.*/

public class questaoTres{
    public static double calculaPotencia(double base, double expoente){
        return Math.pow(base, expoente);
    }
    public static void main(String[] args){
        Scanner leitor = new Scanner(System.in);
        System.out.println("\fInsira o valor da base: ");
        double base = leitor.nextInt();
        
        System.out.println("Insira o valor do expoente: ");
        double expoente = leitor.nextInt();
        
        double resultado = calculaPotencia(base, expoente);
        
        System.out.println(base + " elevado a " + expoente + " é igual a: " + resultado);
    }
}
